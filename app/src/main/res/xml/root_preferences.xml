<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/personal_header">

        <EditTextPreference
            app:key="nickName"
            app:title="@string/nickname_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/game_settings_header">

        <ListPreference
            app:defaultValue="14"
            app:entries="@array/number_of_cards_in_fantasy_entries"
            app:entryValues="@array/number_of_cards_in_fantasy_values"
            app:key="number_of_cards_in_fantasy"
            app:title="@string/number_of_cards_in_fantasy_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
